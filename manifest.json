{
  "manifest_version": 3,
  "name": "Clean Code Copier",
  "version": "1.0.0",
  "description": "Adds a beautiful copy button to every <pre><code> block.",
  "author": "Prem Atid",
  "license": "MIT",

  "browser_specific_settings": {
    "gecko": {
      "id": "clean-code-copier@prematid.github.io",
      "strict_min_version": "115.0"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["clipboardWrite"],
  "host_permissions": ["<all_urls>"]
}