{
  "manifest_version": 3,
  "name": "Clean Code Copier",
  "version": "1.0",
  "description": "Copy code without junk. One click.",
  "icons": { "48": "icon.png" },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}